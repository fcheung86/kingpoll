<div id="wrapper" class="poll">
    <div id='question'>Getting poll, please wait...</div>
        <!-- <button id='click'>click</button>
        <button id='changepoll'>change poll</button>
        <button id='clearpoll'>clear</button> -->
        <div id="choices" class='choices'>
            <div class='radio'></div>
            <div class="share-buttons table" style="display: none;">
                <ul>
                    <li class="fb-share-button td">
                        <a id="fb-share-button" target="_blank">
                            <img src="/images/share/fb_share.png" width="30" height="30">
                        </a>
                    </li>
                    <li class="twitter-share-button1td">
                        <a href="https://twitter.com/intent/tweet?text={{title}}&url={{url}}&via=KINGPOLLInc%20%23kingpoll" target="_blank">
                            <img src="/images/share/twitter_share.png" width="30" height="30">
                        </a>
                    </li>
                    <li class="comment-button td">
                        <a id="comment-button" href="#messages">
                            COMMENT
                        </a>
                    </li>
                    {{#if highlightbutton}}
                    <li  id="highlight-container" class="highlight-button td">
                        <a id="highlight-button">
                            HIGHLIGHT
                        </a>
                    </li>
                    {{/if}}
                    {{#if unhighlightbutton}}
                    <li id="highlight-container" class="unhighlight-button td">
                        <a id="highlight-button">
                            UNHIGHLIGHT
                        </a>
                    </li>
                    {{/if}}
                </ul>
            </div>
        </div>
        <div class='embed-wrap'>
            <div class='embed'></div>
            <div class='embed-href'></div>
        </div>
        <div id="tbDescription">
            <div class='tbDescription'></div>
        </div>
        <div id="results">
            <div class="veil">
                <div class="veil-table">
                    <div class='veil-tr'>
                        <div class='veil-td'>
                            Vote to view results!
                        </div>
                    </div>
                </div>
            </div>
            <svg id='pieTotal' class='stats'></svg>
            <svg id='barVoteTime' class='stats barchart'></svg>
        <!-- <svg id='lineVoteFreq' class='stats'></svg>
        <svg id='results_chart'></svg> -->
        <svg id='activeViewers'></svg>
    </div>
    <div id="mid">
        <div class="veil">
            <div class="veil-table">
                <div class='veil-tr'>
                    <div class='veil-td'>
                        Vote to view results!
                    </div>
                </div>
            </div>
        </div>
        <div id='mapButtons'>
            <!-- <input type="radio" id='radioWorld' class='radio-input' name='mapChoice' value='World' /><label for="radioWorld" class='radio-label'>World</label> -->
            <input type="radio" id='radioCA' class='radio-input' name='mapChoice' value='CA' /><label for="radioCA" class='radio-label'>Canada</label>
            <input type="radio" id='radioUS' class='radio-input' name='mapChoice' value='US' /><label for="radioUS" class='radio-label'>USA</label>
        </div>
        <!-- <div id="mapWorld" class='map'></div> -->
        <div class='mapcontainer'>
            <div id="mapUS" class='map'></div>
            <div id="mapCA" class='map'></div>
        </div>
    </div>
    <div id="messages">
        <!-- The empty element required for Disqus to loads comments into --> 
        <!-- <div id="disqus_thread"></div> -->
        <div class="fb-comments-wrap">
            <div class="fb-comments-wrap" data-href="http://www.kingpoll.com/p/{{pollid}}" data-width="100%" data-numposts="5" data-colorscheme="light"></div>
        </div>
    </div>
    <!-- Adrian's code for commenting -->
