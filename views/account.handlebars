<div id="wrapper" class="account">
  <div class="title">
    <h1>{{title}}</h1>
  </div>
  <div class="personal-wrap">
    <!-- personalinfo about user, display pic or something -->
    <div class="dp">
      <!-- display pic -->
      <img src="http://dummyimage.com/150x200/000/fff" alt="display picture">
    </div>
    <div class='personal-info'>
      <h5>Name: [Real Name | Private]</h5>
      <h5>Username: [ Real | Anonymous ID]</h5>
      <h5>Location: [loc | Private]</h5>
    </div>
    <div class="stats-wrap">
      <!-- user statistics -->
      <h2>Statistics</h2>
      <div class="stats-info">
        <h4>Total votes:</h4>
        <h4 data-pid='1'>Longest vote time:</h4>
        <h4 data-pid='2'>Shortest vote time:</h4>
        <h4>Avg. vote time:</h4>
        <h4>Total vote time:</h4>
        <h4>Polls created:</h4>
      </div>
    </div>
  </div>
  <div class="tabs">
    <div class="tab-container">
      <div class="tab-button" data-index="attr-wrap"><h2>Attributes</h2></div>
      <div class="attr-wrap tab-content">
        <!-- user attr polls section -->
        <p>This is where the attr polls will show up</p>
        <button class="test">click to create attr polls.<br>manual refresh after click</button>
      </div>
    </div>
    <div class="tab-container">
      <div class="tab-button" data-index="upl-wrap"><h2>Polls About User</h2></div>
      <div class="upl-wrap tab-content">
        <!-- upl polls section -->
        <p>This is where the upl polls will show up</p>
      </div>
    </div>
    <div class="tab-container">
      <div class="tab-button" data-index="polls-wrap"><h2>User's Polls</h2></div>
      <div class="polls-wrap tab-content">
        <!-- user generated polls -->
        <ul>
          {{#each polls}} 
            <li><a href="/p/{{p_id}}">{{p_q}}</a></li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>